<UserControl x:Class="AutoSchoolMessageGenerator.ScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoSchoolMessageGenerator"
             mc:Ignorable="d" >
    <DockPanel x:Name="scheduleElement">
        <!--00/00 24時 ～ 00/00 24時 1コマ-->
        <Label x:Name="scheduleLabel" Content="{Binding Path=Content}" FontSize="14" />
        <Button x:Name="scheduleDeleteButton" Content="Delete" Width="61" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Margin="0,3,10,3" DockPanel.Dock="Right" />
    </DockPanel>
</UserControl>
